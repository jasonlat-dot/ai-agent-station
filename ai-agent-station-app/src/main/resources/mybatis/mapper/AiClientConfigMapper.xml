<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jasonlat.infrastructure.dao.IAiClientConfigDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jasonlat.infrastructure.dao.po.AiClientConfig">
        <id column="id" property="id" />
        <result column="source_type" property="sourceType" />
        <result column="source_id" property="sourceId" />
        <result column="target_type" property="targetType" />
        <result column="target_id" property="targetId" />
        <result column="ext_param" property="extParam" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="queryBySourceTypeAndId" resultType="com.jasonlat.infrastructure.dao.po.AiClientConfig">
        SELECT id, source_type, source_id, target_type, target_id, ext_param, status, create_time, update_time
        FROM `ai-agent-station`.`ai_client_config`
        WHERE source_type = #{sourceType} AND source_id = #{sourceId} AND status = 1
    </select>

</mapper>
