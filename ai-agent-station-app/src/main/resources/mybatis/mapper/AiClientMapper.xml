<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jasonlat.infrastructure.dao.IAiClientDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jasonlat.infrastructure.dao.po.AiClient">
        <id column="id" property="id" />
        <result column="client_id" property="clientId" />
        <result column="client_name" property="clientName" />
        <result column="description" property="description" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="queryByClientId" resultType="com.jasonlat.infrastructure.dao.po.AiClient">
        SELECT id, client_id, client_name, description, status, create_time, update_time
        FROM `ai-agent-station`.`ai_client`
        WHERE client_id = #{clientId} AND status = 1
    </select>

</mapper>
